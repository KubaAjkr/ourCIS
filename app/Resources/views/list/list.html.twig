
{% extends 'base.html.twig' %}



{% block headRow %}
    <div class="card-header">
        <div class="row">
            <div class="col col-md">
                <label for="exampleFormControlSelect1">Zakázka: </label>
                <select class="form-control  col-1 mr-sm-2 control-label" id="ContractId">
                    <option>{{ contract }}</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="col col-md">        
                <span class="badge badge-secondary">
                    {{ rows_contract }} 
                </span>
                / 
                <span class="badge badge-dark">
                    {{ rows_item }}
                </span>
            </div>
        </div>
     </div>


{% endblock %}

{% block body %}
    {% if app.user != null %}
        <div class="card-body" >    
            <div class="row">  
                <div class="scrollable-panel col col-2" id="sidebar-wrapper">
                    {% for row in XXX %}  
                        <div class="row">
                            <div class="col col-lg">
                                <div class="row">
                                    {%if row.lvl > 0 %}
                                        {% for ind in 1..row.lvl %}
                                            <div class="col col-sm-1">                                 
                                            </div>       
                                        {% endfor %}
                                    {% endif %}
                                    <div class="col col-md">
                                        {{ row.title }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div>
                    Hlavní okno
                </div>
            </div>
        {% endif %}
        {% if app.user == null %}
            <div class="alert alert-info" role="alert">
                This is a info alert with <a href="/login" class="alert-link">K aplikaci je třeba se přihlásit >></a>
            </div>
        {% endif %}
        </div>

    {#{{ tree|raw }}#}



{% endblock %}